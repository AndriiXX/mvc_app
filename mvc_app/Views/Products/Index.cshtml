@model IEnumerable<mvc_app.Models.Product>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Read Products";
}
<div class="container mt-4">
    <h2 class="mb-4 text-center">Products</h2>
    <p>
        <a href="@Url.Action("Create")" class="btn btn-primary">Create New Product</a>
    </p>
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Description</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.Name</td>
                            <td>@String.Format("{0:C}", product.Price)</td>
                            <td>@product.Description</td>
                            <td>
                                <a href="@Url.Action("Update", new { id = product.Id })" class="btn btn-warning">
                                    <i class="fas fa-edit"></i> Update
                                </a>
                                <a href="@Url.Action("Details", new { id = product.Id })" class="btn btn-info">
                                    <i class="fas fa-info-circle"></i> Details
                                </a>
                                <a href="@Url.Action("Delete", new { id = product.Id })" class="btn btn-danger">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
