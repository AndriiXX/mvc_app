@using Microsoft.AspNetCore.Identity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Shop academy step</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>
    <header class="bg-light p-3 shadow-sm">
        <div class="container">
            <h1 class="h4">Welcome to Shop Academy, @User.Identity.Name!</h1>
            <nav>
                @if (User.Identity.IsAuthenticated)
                {
                    <form asp-action="Logout" asp-controller="User" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Logout</button>
                    </form>
                }
                else
                {
                    <ul class="nav nav-pills mt-3">
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-primary" href="/">Main</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-success" href="/user/register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-info" href="/user/auth">Login</a>
                        </li>
                    </ul>

                }
            </nav>
            @if (User.IsInRole("admin"))
            {
                <ul class="list-group mt-3">
                    <li class="list-group-item">
                        <a asp-action="Create" asp-controller="Products" class="btn btn-outline-primary w-100">Create Product</a>
                    </li>
                    <li class="list-group-item">
                        <a asp-action="Update" asp-controller="Products" class="btn btn-outline-warning w-100">Update Product</a>
                    </li>
                    <li class="list-group-item">
                        <a asp-action="Index" asp-controller="Products" class="btn btn-outline-info w-100">Read Product</a>
                    </li>
                </ul>

            }
            else
            {
                <ul class="list-group mt-3">
                    <li class="list-group-item list-group-item-action">
                        <a asp-action="Index" asp-controller="Products">Read Product</a>
                    </li>
                </ul>
            }
        </div>
    </header>
    <main class="container my-4">
        @RenderBody()
    </main>
    <footer class="bg-light text-center py-3 mt-4">
        <p class="mb-0">&copy; 2024 - BookApp</p>
    </footer>
</body>
</html>
